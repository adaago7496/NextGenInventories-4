@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
@if(SignInManager.IsSignedIn(User))
{
<div>
        @if (User.FindFirstValue(ClaimTypes.NameIdentifier).Equals("f6241a56-830f-48d3-befc-2f192e7b996f"))
        {
            @Html.ActionLink("List of Users", "Index", "Users")<br />
        }
    @Html.ActionLink("List of Products", "Index", "Products")<br />
    @Html.ActionLink("List of Inventory","Index","InventoryDates")
</div>
}